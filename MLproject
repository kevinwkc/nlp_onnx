entry_points:
  main:
    parameters:
      alpha: {type: float, default: 0.2}
      l1_ratio: {type: float, default: 0.1}
    command: "python main.py --alpha {alpha} --l1-ratio {l1_ratio}"

  predict:
    parameters:
      hidden_units: {type: int, default: 20}
    command: "python predict.py"